<?xml version="1.0" encoding="UTF-8"?>
<!-- This file is not required if you don't need any extra configuration. -->
<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
      http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
   
      <!-- Write your navigation rules here. You are encouraged to use CDI for creating @Named managed beans. -->
	<application>

		<!-- <message-bundle> resourcebundles.jsfmessages </message-bundle> -->
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>pt_BR</supported-locale>
			<supported-locale>pt_PT</supported-locale>
			<supported-locale>en_US</supported-locale>
		</locale-config>

		<resource-bundle>
			<base-name>dbsfaces</base-name>
			<var>dbsfaces</var>
		</resource-bundle>
	</application> 
	
	<factory>
		<exception-handler-factory>
			br.com.dbsoft.ui.exception.DBSFacesExceptionHandlerFactory
		</exception-handler-factory>
	</factory>

</faces-config>
